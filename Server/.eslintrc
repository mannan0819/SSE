{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "airbnb-base"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/semi": "warn",
        "array-bracket-spacing": "off",
        "comma-dangle": [
            2,
            "always-multiline"
        ],
        "comma-spacing": "error",
        "lines-between-class-members": "off",
        "linebreak-style": "off",
        "max-len": [
            "error",
            {
                "ignoreComments": true,
                "code": 120
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error",
                    "info"
                ]
            }
        ],
        "no-plusplus": "off",
        "no-undef": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "off",
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                },
                "ObjectPattern": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                },
                "ImportDeclaration": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                },
                "ExportDeclaration": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                }
            }
        ],
        "import/no-unresolved": "off",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "off",
            "never"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "env": {
        "jest": true,
        "node": true
    },
    "ignorePatterns": [
        "./dist/**/*",
        "./coverage/**/*"
    ]
}